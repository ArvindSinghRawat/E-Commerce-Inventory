type Query {
    productById(id: String) : Product
    products: [Product]
}

type Mutation {
    addProduct(product: ProductInput): Product
    updateProduct(product: ProductInput, id: String) : Product
    patchProduct(product: ProductInput, id: String): Product
    deleteProduct(id: String): Product
}

input ProductInput {
    name: String!
    price: BigDecimal
    brand: String
}

scalar BigDecimal

type Product {
    id: String
    name: String!
    price: BigDecimal
    brand: String
}
